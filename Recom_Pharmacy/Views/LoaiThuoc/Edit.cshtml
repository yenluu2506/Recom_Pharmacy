@model Recom_Pharmacy.Models.LOAITHUOC

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật Loại Thuốc</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/loaithuoc">Loại Thuốc</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="card-body">
        @if (Model != null)
        {
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Edit", "LoaiThuoc", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(x => x.ID)
                    <!-- your steps content here -->
                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MAMENU, "MAMENU", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("MAMENU", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MAMENU, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên Loại Thuốc</label>
                            @Html.TextBoxFor(x => x.TENLOAI, new { @class = "form-control", @placeholder = "Nhập tên loại cần chỉnh sửa" })
                            @Html.ValidationMessageFor(x => x.TENLOAI, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <a href="/loaithuoc" class="btn btn-danger">Quay lại</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>

                }
            </div>
        }
    </div>
    <!-- /.card-body -->
    <!-- /.card -->

</section>