@model IEnumerable<Recom_Pharmacy.Models.OrderEntity>
@{
    ViewBag.Title = "AllListOrder";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách Đơn hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/index">Trang chủ</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h2 class="text-center">Đơn Hàng</h2>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Mã đơn
                        </th>
                        <th>
                            Ngày Đặt Hàng
                        </th>
                        <th>
                            Ngày Giao Hàng
                        </th>
                        <th>
                            Tổng Giá
                        </th>
                        <th>
                            Trạng Thái
                        </th>
                        <th>
                            Hoàn Thành
                        </th>
                        <th>
                            Thanh toán
                        </th>
                        <th>
                            Khách Hàng
                        </th>
                        <th>
                            Địa Chỉ
                        </th>
                        <th>
                            Số Điện Thoại
                        </th>
                        <th>
                            Ghi Chú
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NGAYXUAT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NGAYGIAOHANG)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TONGTIEN)
                            </td>

                            <td>
                                @if (item.HOANTHANH == true && item.TRANGTHAI == true && item.DATHANHTOAN == true && item.TTGIAOHANG == true)
                                {
                                    <span class="badge badge-success">Đã giao </span>
                                }
                                else if (item.TRANGTHAI == false && item.HOANTHANH == true)
                                {
                                    <span class="badge badge-danger">Đã hủy</span>
                                }
                                else if (item.TTGIAOHANG == false && item.TRANGTHAI == true && item.HOANTHANH == false)
                                {
                                    <span class="badge badge-warning">Đang giao</span>
                                }
                            </td>
                            <td>
                                @if (item.TRANGTHAI == true && item.HOANTHANH == true && item.TTGIAOHANG == true)
                                {
                                    <p>Đã hoàn thành</p>
                                }
                                else if (item.TRANGTHAI == false && item.HOANTHANH == true && item.TTGIAOHANG == false)
                                {
                                    if (item.DATHANHTOAN == true)
                                    {
                                        <p>Hủy Đơn(Hoàn tiền)</p>
                                    }
                                    else
                                    {
                                        <p>Hủy Đơn</p>

                                    }
                                }
                                else
                                {
                                    <p>Chưa hoàn thành</p>
                                }

                            </td>
                            <td>
                                @if (item.DATHANHTOAN == true)
                                {
                                    <p>Đã thanh toán</p>
                                }
                                else
                                {
                                    <p>Chưa thanh toán</p>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.KHACHHANG.TENKH)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.KHACHHANG.DIACHI)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.KHACHHANG.SDT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GHICHU)
                            </td>
                            <td>

                                @Html.ActionLink("Chi tiết", "OrderDetail", new { id = item.ID })

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
