@model Recom_Pharmacy.Models.THUOC

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật thuốc</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/thuoc">Thuốc</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="card-body">
        @if (Model != null)
        {
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Edit", "Thuoc", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(x => x.ID)
                    <!-- your steps content here -->
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills">
                                <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Thông tin chung</a></li>
                                <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Đơn vị tính</a></li>
                            </ul>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="active tab-pane" id="activity">
                                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                                        <!-- your steps content here -->
                                        <div class="form-group">
                                            <label for="exampleInputFile">Ảnh</label>
                                            <div class="input-group">
                                                <div class="custom-file">
                                                    @Html.TextBoxFor(x => x.ANH, new { @id = "txtImage", @class = "form-control" })
                                                </div>
                                                <div class="input-group-append">
                                                    <input type="button" value="Tải ảnh" onclick="BrowseServer('txtImage');" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Tên Thuốc</label>
                                            @Html.TextBoxFor(x => x.TENTHUOC, new { @class = "form-control", @placeholder = "Nhập vào tên" })
                                            @Html.ValidationMessageFor(x => x.TENTHUOC, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Loại thuốc</label>
                                            @Html.DropDownListFor(model => model.MALOAI, null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.MALOAI, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Tên chi tiết</label>
                                            @Html.TextBoxFor(x => x.TENCT, new { @class = "form-control", @placeholder = "Nhập vào tên" })
                                            @Html.ValidationMessageFor(x => x.TENCT, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Đóng gói</label>
                                            @Html.TextBoxFor(x => x.DONGGOI, new { @class = "form-control", @placeholder = "Nhập vào tên" })
                                            @Html.ValidationMessageFor(x => x.DONGGOI, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="startdate">Ngày sản xuất</label>
                                            <div class="input-group date" id="startdate" data-target-input="nearest">
                                                @Html.TextBoxFor(x => x.NGAYSX, new { @class = "form-control datetimepicker-input", data_target = "#startdate" })
                                                <div class="input-group-append" data-target="#startdate" data-toggle="datetimepicker">
                                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="enddate">Hạn sử dụng</label>
                                            <div class="input-group date" id="enddate" data-target-input="nearest">
                                                @Html.TextBoxFor(x => x.HSD, new { @class = "form-control datetimepicker-input", data_target = "#enddate" })
                                                <div class="input-group-append" data-target="#enddate" data-toggle="datetimepicker">
                                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Nhà sản xuất</label>
                                            @Html.TextBoxFor(x => x.NHASX, new { @class = "form-control", @placeholder = "Nhập vào tên" })
                                            @Html.ValidationMessageFor(x => x.NHASX, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Nước sản xuất</label>
                                            @Html.TextBoxFor(x => x.NUOCSX, new { @class = "form-control", @placeholder = "Nhập vào tên" })
                                            @Html.ValidationMessageFor(x => x.NUOCSX, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Đối tượng sử dụng</label>
                                            @Html.TextBoxFor(x => x.DOITUONGSD, new { @class = "form-control", @placeholder = "Nhập vào tên" })
                                            @Html.ValidationMessageFor(x => x.DOITUONGSD, null, new { @class = "text-danger" })
                                        </div>
                                            <label for="exampleInputEmail1">Công dụng</label>
                                        <div class="form-group ">
                                            @Html.TextBoxFor(x => x.CONGDUNG, new { @class = "form-control", @placeholder = "Nhập vào tên" })
                                            @Html.ValidationMessageFor(x => x.CONGDUNG, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Mô tả</label>
                                            @Html.TextAreaFor(x => x.MOTA, new { @class = "form-control", @id = "txtDetail" })
                                        </div>
                    
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Giá bán</label>
                                            @Html.TextBoxFor(x => x.GIABAN, new { @class = "form-control", @placeholder = "Nhập vào tên" })
                                            @Html.ValidationMessageFor(x => x.GIABAN, null, new { @class = "text-danger" })
                                        </div>
                               
                                        <div class="form-group">
                                            <label for="exampleInputPassword1">Hiển thị</label>
                                            @Html.CheckBoxFor(x => x.TRANGTHAI, new { @checked = "checked" })
                                        </div>
                                        <div class="form-group">
                                            <a href="/thuoc" class="btn btn-danger">Quay lại</a>
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="timeline">
                                    <input type="hidden" id="idThuoc" value=@Model.ID />
                                    <div class="row">
                                        <div class="col-md-12 text-right">
                                            <input type="button" class="btn btn-primary btnShowUnitModal" data-toggle="modal" data-target="#AceptModal" value="Thêm mới" />
                                        </div>
                                        <div class="col-md-12">
                                             @Html.Action("Index", "QUYDOIDV", new { @id = Model.ID })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>
<div id="AcceptModalContainer">
    <input type="hidden" class="get_id" />

</div>
@section scripts{
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('txtDetail', {
                customConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span',
            });
          
            $('.btnShowUnitModal').click(function () {
                $('#AcceptModalContainer').load('/thuoc/Partial_DVT', function () {
                    $('#AcceptModal').modal('show');
                });

            });

        });
        function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                document.getElementById(field).value = fileUrl;
            };
            finder.popup();
        }
        $(function () {
            // Date picker for start date
            $('#startdate').datetimepicker({
                format: 'L',
                icons: {
                    time: 'far fa-clock',
                    date: 'fa fa-calendar',
                    up: 'fa fa-chevron-up',
                    down: 'fa fa-chevron-down',
                    previous: 'fa fa-chevron-left',
                    next: 'fa fa-chevron-right',
                    today: 'fa fa-calendar-check-o',
                    clear: 'fa fa-trash',
                    close: 'fa fa-times'
                }
            });
            $('#enddate').datetimepicker({
                format: 'L',
                icons: {
                    time: 'far fa-clock',
                    date: 'fa fa-calendar',
                    up: 'fa fa-chevron-up',
                    down: 'fa fa-chevron-down',
                    previous: 'fa fa-chevron-left',
                    next: 'fa fa-chevron-right',
                    today: 'fa fa-calendar-check-o',
                    clear: 'fa fa-trash',
                    close: 'fa fa-times'
                }
            });
        });


    </script>
    <!-- Select2 -->
    <link rel="stylesheet" href="~/Content/clients/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/Content/clients/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
}